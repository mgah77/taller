<odoo>

    <report
        id="action_report_entrega_equipos"
        string="Informe de Entrega de Equipos"
        model="entrega.equipos"
        report_type="qweb-pdf"
        file="taller.report_entrega_equipos"
        name="taller.report_entrega_equipos"
    />

    <template id="report_entrega_equipos">
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="doc">
                <div class="header">
                    <div class="o_clean_header">
                        <div class="row"> 
                            <div class="col-5">
                                <div>a
                                </div>
                            </div>
                            <div class="col-4">
                                <div style="border:3px solid black; text-align:center; font-size:20px; padding-bottom:0px">
                                    <h5><strong>Número de Entrega:</strong><br/><t t-esc="doc.name"/></h5>
                                </div>
                            </div>
                        </div>
                    </div> 
                </div>
                <div class="page">
                    <h3>Entrega de Equipos de Reemplazo</h3>
                    
                    <p><strong>Cliente:</strong> <t t-esc="doc.armador.name"/></p>
                    <p><strong>Orden de Trabajo:</strong> <t t-esc="doc.ot_id.name"/></p>
                    <p><strong>Fecha de Entrega:</strong> <t t-esc="doc.fecha_entrega"/></p>
                    <p><strong>Fecha de Devolución:</strong> <t t-esc="doc.fecha_devolucion"/></p>

                    <h3>Equipos Entregados</h3>
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Producto</th>
                                <th>Cantidad</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="doc.line_ids" t-as="line">
                                <td><t t-esc="line.product_id.name"/></td>
                                <td><t t-esc="line.cantidad"/></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>


</odoo>