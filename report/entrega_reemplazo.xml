<odoo>

    <report
        id="action_report_entrega_equipos"
        string="Documento de Entrega de Equipos"
        model="entrega.equipos"
        report_type="qweb-pdf"
        file="taller.report_entrega_equipos"
        name="taller.report_entrega_equipos"
    />

    <template id="report_entrega_equipos">
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="doc">
                <div class="header">
                    <div class="o_clean_header">
                        <div class="row"> 
                            <div class="col-8">
                                <div>
                                    <!--img src="/taller/static/src/img/logo.png" style="width: 200px; height: 100px;"/><br/!-->
                                    <p>COMERCIALIZADORA INSUMAR SPA.</p><br/>

                                </div>
                            </div>
                            <div class="col-3">
                                <div style="border:2px solid black; text-align:center; font-size:20px; padding-bottom:0px">
                                    <br/><h5><strong>Número de Entrega:</strong><br/><t t-esc="doc.name"/></h5><br/>
                                </div>
                            </div>
                        </div>
                    </div> 
                </div>
                <div class="page">
                    <div style="text-align:center;">
                        <h4>Entrega de Equipos de Reemplazo</h4>
                    </div>
                    <p><strong>Cliente:</strong> <t t-esc="doc.armador.name"/></p>
                    <p><strong>Orden de Trabajo:</strong> <t t-esc="doc.ot_id.name"/></p>
                    <p><strong>Fecha de Entrega:</strong> <t t-esc="doc.fecha_entrega"/></p>
                    <p><strong>Fecha de Devolución:</strong> <t t-esc="doc.fecha_devolucion"/></p>
                    <div style="text-align:center;">
                        <h4>Equipos Entregados</h4>
                    </div>
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Producto</th>
                                <th>Cantidad</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="doc.line_ids" t-as="line">
                                <td><t t-esc="line.product_id.name"/></td>
                                <td><t t-esc="line.cantidad"/></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>


</odoo>