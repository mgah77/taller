<odoo>

    <record id="plan_tree" model="ir.ui.view">
            <field name="name">Planificacion_tree</field>
            <field name="model">taller.ot.line</field>
            <field name="arch" type="xml">
                <tree string="Orden de trabajo">

                                <field name ="item"/>
                                <field name ="obs"/>
                                <field name ="nave"/>
                                <field name ="fecha_entr"/>

                </tree>
            </field>
        </record>

 <record id="plan_kanban" model="ir.ui.view">
            <field name="name">Planificacion_kanban</field>
            <field name="model">taller.ot.line</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="container">
                                <div class="col-sm">
                                    <div class="oe_kanban_global_click card">
                                        <div class="card-body">
                                            <field name ="nave"/>
                                            <br/>
                                            <field name ="fecha_entr"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>




</odoo>
