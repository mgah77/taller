<odoo>

    <record id="plan_tree" model="ir.ui.view">
            <field name="name">Planificacion_tree</field>
            <field name="model">taller.ot.line</field>
            <field name="arch" type="xml">
                <tree string="Orden de trabajo">

                                <field name ="item"/>
                                <field name ="obs"/>
                                <field name ="nave"/>
                                <field name ="fecha"/>
                                <field name ="depto"/>


                </tree>
            </field>
        </record>

 <record id="plan_kanban" model="ir.ui.view">
            <field name="name">Planificacion_kanban</field>
            <field name="model">taller.ot.line</field>
            <field name="arch" type="xml">
                <kanban default_order="fecha" default_group_by="depto"  group_create="False" class="o_kanban_small_column" group_delete="False" group_edit="False" create="False">
                    <templates>
                        <t t-name="kanban-box">
                            <div class="container">
                                <div class="row">
                                    <div class="col-sm">
                                            <field name ="depto" invisible="1" />
                                            OT : <field name ="name"/> / <field name ="nave"/>
                                            <br/>
                                            <field name ="fecha" widget="date_index"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

</odoo>
