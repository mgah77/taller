<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Acción de ventana para productos sin stock en bodega 3 -->
    <record id="action_product_warehouse_view_zero_stock" model="ir.actions.act_window">
        <field name="name">Productos sin Stock</field>
        <field name="res_model">stock.quant</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="stock.view_stock_quant_tree"/>
        <field name="search_view_id" ref="stock.quant_search_view"/>
        <field name="domain">[('location_id.warehouse_id', '=', 3), ('quantity', '=', 0), ('product_id.product_tmpl_id.sale_ok', '=', True)]</field>
    </record>

    <!-- Acción de ventana para productos sin stock en bodega 2 -->
    <record id="action_product_warehouse_view_n_zero_stock" model="ir.actions.act_window">
        <field name="name">Productos sin Stock</field>
        <field name="res_model">stock.quant</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="stock.view_stock_quant_tree"/>
        <field name="search_view_id" ref="stock.quant_search_view"/>
        <field name="domain">[('location_id.warehouse_id', '=', 2), ('quantity', '=', 0), ('product_id.product_tmpl_id.sale_ok', '=', True)]</field>
    </record>

    <!-- Menú para productos sin stock en bodega 3 -->
    <menuitem id="menu_stock_user_warehouse_zero_stock" 
              name="Productos sin Stock" 
              parent="stock.menu_stock_root" 
              action="action_product_warehouse_view_zero_stock" 
              groups="taller.group_parvial"
              sequence="22"/>

    <!-- Menú para productos sin stock en bodega 2 -->
    <menuitem id="menu_stock_user_warehouse_n_zero_stock" 
              name="Productos sin Stock" 
              parent="stock.menu_stock_root" 
              action="action_product_warehouse_view_n_zero_stock" 
              groups="taller.group_nuble"
              sequence="23"/>

</odoo>