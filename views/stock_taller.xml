<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <!-- Acción de ventana -->
    <record id="action_product_warehouse_view" model="ir.actions.act_window">
        <field name="name">Productos de mi bodega</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_product_warehouse_tree"/>
        <field name="search_view_id" ref="product.product_template_search_view"/>
        <field name="domain">[('sale_ok', '=', True)]</field>
        <field name="context">{'search_default_filter_to_sell': 1}</field>
    </record>


    <!-- Vista tree para stock por bodega de usuario -->
    <record id="view_product_warehouse_tree" model="ir.ui.view">
        <field name="name">product.template.warehouse.tree</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <tree string="Productos de mi bodega" editable="false">
                <field name="default_code"/>
                <field name="name"/>
                <field name="categ_id"/>
                <field name="list_price"/>
                <field name="qty_available" widget="float"/>
                <field name="virtual_available" widget="float"/>
            </tree>
        </field>
    </record>



    <!-- Menú -->
    <menuitem id="menu_stock_user_warehouse" 
              name="Stock" 
              parent="stock.menu_stock_root" 
              action="action_product_warehouse_view" 
              sequence="20"/>
</odoo>