<odoo>
    <record id="sequence_ot" model="ir.sequence">
      <field name="name">SeqOt</field>
      <field name="code">abr.ot</field>
      <field name="prefix">OT</field>
      <field name="padding">5</field>
      <field name="company_id" eval="False" />
    </record>

    <record id="ot_form" model="ir.ui.view">
            <field name="name">Orden de Trabajo</field>
            <field name="model">taller.ot</field>
            <field name="arch" type="xml">
                <form string="Orden de trabajo">
                <header> 
                       
                </header>
                <sheet>

                    <group>
                      <group>
                        <field name="name" />
                        <field name="fecha_recep" />
                        <field name="armador" />
                        <field name="fecha_entr" />
                        <field name="nave" />
                        <field name="obs" />
                      </group>
                      <group>
                        <group>
                          <field name="user" />
                          <field name="contacto" />
                        </group>
                        <newline />
                          <group>
                          <field name="contacto_fono" />
                          </group>
                          <group>
                          <field name="contacto_mail" />
                        </group>
                        <newline />
                        <group>
                          <field name="maniobra" />
                          <field name="lugar" />
                          <field name="replace" />
                        </group>
                      </group>
                    </group>
                    <notebook>
                        <page string="Trabajos">

                            <field name="ot_line">
                            <tree editable="bottom">
                                <field name ="item"/>
                                <field name ="obs"/>
                                <field name ="serie"/>
                                <field name ="cant"/>
                                <field name ="depto"/>
                            </tree>
                            </field>

                        </page>

                    </notebook>
                </sheet>

                </form>
            </field>
        </record>


        <record id="ot_tree" model="ir.ui.view">
                <field name="name">Ordenes de Trabajo</field>
                <field name="model">taller.ot</field>
                <field name="arch" type="xml">
                    <tree string="Orden de trabajo">

                                    <field name ="name"/>
                                    <field name ="armador"/>
                                    <field name ="nave"/>
                                    <field name ="fecha_entr"/>


                    </tree>
                </field>
            </record>






</odoo>
